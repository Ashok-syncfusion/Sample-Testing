    <component type="typeof(Shared.SampleMetaData)" render-mode="WebAssemblyPrerendered" />

    <base href="~/" />
    <link href="~/styles/css/bootstrap.min.css" rel="stylesheet" />
    <link href="BlazorDemos.Client.styles.css" rel="stylesheet" />

    <component type="typeof(Shared.DynamicResources)" render-mode="Static" />

    <environment include="Development">
        <link href="~/styles/common/devices.css" rel="stylesheet" media="(max-width: 1024px)" />
    </environment>
    <environment include="Production">
        <link href="~/styles/common/devices.min.css" rel="stylesheet" media="(max-width: 1024px)" />
